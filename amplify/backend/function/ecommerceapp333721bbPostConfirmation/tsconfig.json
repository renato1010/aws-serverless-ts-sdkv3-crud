{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./src",
    "baseUrl": "./"
    // "rootDir": "./lib",
    // "paths": {
    //   "src": ["./lib"]
    // }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
